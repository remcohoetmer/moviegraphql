type Show {
    id: ID!
    hall: String!
    start: String!
    pageCount: Int
    movie: Movie
}

extend type Query {
    findAllShows: [Show]!
    countShows: Long!
}

extend type Mutation {
    newShow(hall: String!, start: String!, pageCount: Int, movie: ID!) : Show!
    deleteShow(id: ID!) : Boolean
    updateShowPageCount(pageCount: Int!, id: ID!) : Show!
}